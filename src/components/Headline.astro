---
const { overskrift_bold, overskrift_thin, text, textbox } = Astro.props;
---

<section>
  <article>
    <div></div>
    <h2>{overskrift_bold}<span>{overskrift_thin}</span></h2>
    <div></div>
  </article>
  {textbox && <p>{text}</p>}
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;

    margin-bottom: 7rem;
  }

  article {
    display: flex;
    min-width: 100vw;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
  }

  h2 {
    text-align: center;
    background-color: white;
    min-width: fit-content;
  }

  span {
    font-weight: 100;
    margin-left: 10px;
  }

  div {
    flex-grow: 1;
    height: 3px;
    background-color: black;
  }

  p {
    color: var(--text-color-main);

    max-width: 65ch;
  }

  @media (max-width: 800px) {
    p {
      text-align: center;
    }
  }
</style>
