<style>
  section {
    display: flex;
    gap: 2rem;
    justify-content: space-between;
  }

  img {
    max-width: 500px;
  }

  article {
    color: var(--text-color-alternativ);
    background-color: var(--brand-color-primary);
    display: flex;
    flex-direction: column;
    border-radius: 50px 0 0 50px;
    padding: 2rem;
    width: 40rem;
  }

  .speakerinfo {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .linkbox {
    display: flex;
  }

  .h3thin {
    font-weight: 100;
  }
